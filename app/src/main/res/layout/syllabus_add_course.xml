<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yun">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/add_course"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/add_course_room"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/add_course"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/add_course_time"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/add_course_room"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_course_et1"
        android:maxLines="1"
        android:layout_alignTop="@+id/add_course"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/add_course" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_course_et2"
        android:maxLines="1"
        android:layout_alignTop="@+id/add_course_room"
        android:layout_toEndOf="@+id/add_course_room" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_course_et3"
        android:maxLines="1"
        android:layout_alignTop="@+id/add_course_time"
        android:layout_toEndOf="@+id/add_course_time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/add_bt1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_course_week"
        android:layout_above="@+id/add_course_et1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加课程"
        android:id="@+id/tv_add1"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>