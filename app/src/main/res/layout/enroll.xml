<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/shamo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/er_tv_username"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="156dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/er_tv_pass"
        android:layout_below="@+id/er_tv_username"
        android:layout_alignStart="@+id/er_tv_username"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/er_tv_pass_ok"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/er_tv_pass"
        android:layout_alignStart="@+id/er_tv_pass" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:maxLines="1"
        android:layout_alignBottom="@+id/er_tv_username"
        android:layout_toEndOf="@+id/er_tv_pass_ok" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_passsword"
        android:maxLines="1"
        android:layout_alignTop="@+id/er_tv_pass"
        android:layout_alignEnd="@+id/et_username"
        android:layout_toEndOf="@+id/er_tv_pass_ok" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_pass_OK"
        android:maxLines="1"
        android:layout_alignTop="@+id/er_tv_pass_ok"
        android:layout_alignEnd="@+id/editText2"
        android:layout_toEndOf="@+id/er_tv_pass_ok" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认注册"
        android:textSize="20dp"
        android:id="@+id/btn_enroll_ok"
        android:layout_below="@+id/et_pass_OK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="40dp"
        android:id="@+id/tv_enroll"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>